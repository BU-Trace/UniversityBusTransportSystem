{
  "name": "ubts-monorepo",
  "private": true,
  "packageManager": "npm@10.5.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "husky install",
    "bootstrap": "node ./scripts/bootstrap.mjs",
    "dev": "node ./scripts/dev.mjs",
    "build": "node ./scripts/build.mjs",
    "start": "node -e \"console.log('\\x1b[32mStarting server...\\x1b[0m')\" && npm --prefix server run start",
    "lint": "node ./scripts/lint.mjs",
    "typecheck": "node ./scripts/typecheck.mjs",
    "format": "node ./scripts/format.mjs",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down -v",
    "env:check": "node ./scripts/env-verify.mjs",
    "lint:fix": "npm run lint -- --fix "
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.5",
    "@types/handlebars": "^4.0.40",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.3",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-icons": "^2.2.7",
    "@types/react-tabs": "^5.0.4",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.6.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.2",
    "eslint-plugin-react": "^7.35.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^15.5.2",
    "ora": "^8.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.17",
    "turbo": "^2.0.6",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.552.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "next": "^16.0.1",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-tabs": "^6.1.0",
    "sonner": "^2.0.7",
    "ua-parser-js": "^2.0.6",
    "zod": "^4.1.12"
  }
}
