{
  "name": "ubts-monorepo",
  "private": true,
  "packageManager": "npm@10.5.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "husky install",
    "bootstrap": "node ./scripts/bootstrap.mjs",
    "dev": "node ./scripts/dev.mjs",
    "build": "node ./scripts/build.mjs",
    "start": "node -e \"console.log('\\x1b[32mStarting server...\\x1b[0m')\" && npm --prefix server run start",
    "lint": "node ./scripts/lint.mjs",
    "typecheck": "node ./scripts/typecheck.mjs",
    "format": "node ./scripts/format.mjs",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down -v",
    "env:check": "node ./scripts/env-verify.mjs"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-icons": "^2.2.7",
    "@types/react-tabs": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chalk": "^5.6.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.35.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "ora": "^8.2.0",
    "prettier": "^3.3.3",
    "turbo": "^2.0.6",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "lucide-react": "^0.552.0",
    "next": "^16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-tabs": "^6.1.0"
  }
}
